@model dynamic;

@{
    ViewData["Title"] = "Product";
}

<a href="/product/add" class="btn btn-primary">
    <i class="fa fa-plus"></i> Create
</a>
<hr />

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Product Quantity</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.products)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                @foreach (var itemC in Model.cates)
                {
                    if (item.CateID == itemC.ID)
                    {
                        <td>@itemC.Name</td>
                    }
                }
                <td>
                    <a asp-action="edit" asp-controller="product" asp-route-id="@item.ID" class="btn btn-success">
                        <i class="fa fa-pen"></i>
                    </a>
                    <a asp-action="remove" asp-controller="product" asp-route-id="@item.ID" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>